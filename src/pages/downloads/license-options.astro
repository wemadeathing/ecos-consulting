---
import BaseLayout from "@layout/BaseLayout.astro";
import Button from "@ui/Button.astro";
import Icon from "@ui/icons/Icon.astro";
import { Image } from "astro:assets";

// Import your images
import datanovaImage from "@images/datanova.webp";
import graphImage from "@images/graph.webp";
// If you have this image:
// import safetyImage from "@images/safety-services.webp";

// Info Section for Additional Services
const servicesSection = {
  environmentalServices: {
    title: "Environmental Services",
    description: "Comprehensive solutions for environmental compliance and management:",
    items: [
      "Due diligence assessments",
      "Pre-feasibility site assessment and risk evaluation",
      "Environmental Impact Assessment (EIA) processes",
      "Identification of environmental management solutions",
      "Compliance advice/auditing in terms of environmental best practice",
      "Project permitting and regulatory guidance",
      "ECO and EO for monitoring and reporting during construction"
    ]
  },
  safetyServices: {
    title: "Safety Services",
    description: "Complete safety management and compliance solutions:",
    items: [
      "Health and Safety Management Plans",
      "Approval of Health and Safety Files",
      "Health and Safety Risk Assessments",
      "Design of EHS management systems based on ISO standards",
      "Infrastructure assessments for compliance",
      "Construction permit applications (DOL)",
      "Health and Safety Agent and management services",
      "Auditing throughout operation as required",
      "Maintenance of management systems in line with ISO requirements",
      "Provision of Safety Officer for construction"
    ]
  }
};
---

<BaseLayout>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-3xl lg:mx-0">
        <h1 class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          Elevating Your Safety and Compliance Standards
        </h1>
        <p class="mt-8 text-pretty text-lg font-medium text-slate-700 sm:text-xl/8">
          Safety & Compliance Solutions: SHE, Facilities, Tech, Construction
        </p>
        <p class="mt-4 text-pretty text-lg text-slate-600">
          Optimize safety and compliance with our expert services. From SHE management to facilities and tech plant safety, we've got you covered.
        </p>
      </div>
    </div>
  </section>

  {/* Service Cards Section - Modern Design */}
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {/* SHE Management Card */}
      <div class="card group">
        <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-teal-100/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        
        <h3 class="mb-3 text-xl font-medium text-slate-800">SHE Management</h3>
        <p class="mb-4 text-slate-600">
          We develop, implement and maintain effective health and safety, quality and environmental management systems that adhere to all applicable regulations.
        </p>
        
        <div class="mt-auto">
          <a href="#" class="group/link inline-flex items-center text-teal-600 transition hover:text-teal-500">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      {/* Facilities Management Card */}
      <div class="card group">
        <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-teal-100/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        
        <h3 class="mb-3 text-xl font-medium text-slate-800">Facilities Management</h3>
        <p class="mb-4 text-slate-600">
          Optimize your facility's performance with our comprehensive technical and non-technical services for safety, efficiency, and comfort.
        </p>
        
        <div class="mt-auto">
          <a href="#" class="group/link inline-flex items-center text-teal-600 transition hover:text-teal-500">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      {/* Tech Plant Safety Card */}
      <div class="card group">
        <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-teal-100/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        
        <h3 class="mb-3 text-xl font-medium text-slate-800">Tech Plant Safety</h3>
        <p class="mb-4 text-slate-600">
          We prioritize the safety and reliability of your technical plants through comprehensive compliance assessments and risk identification.
        </p>
        
        <div class="mt-auto">
          <a href="#" class="group/link inline-flex items-center text-teal-600 transition hover:text-teal-500">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      {/* Construction Safety Card */}
      <div class="card group">
        <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-teal-100/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        
        <h3 class="mb-3 text-xl font-medium text-slate-800">Construction Safety</h3>
        <p class="mb-4 text-slate-600">
          We provide holistic Compliance Assessment and Audit Services throughout the life cycle of a construction project.
        </p>
        
        <div class="mt-auto">
          <a href="#" class="group/link inline-flex items-center text-teal-600 transition hover:text-teal-500">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Visual Section before Additional Services */}
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 lg:px-8">
    <div class="relative overflow-hidden rounded-3xl bg-teal-100/50">
      <div class="absolute inset-0 bg-teal-700 opacity-5 bg-[radial-gradient(#075252_1px,transparent_1px)]" style="background-size: 20px 20px;"></div>
      
      <div class="relative grid gap-8 p-8 md:grid-cols-2 md:p-12">
        <div class="flex flex-col justify-center">
          <h2 class="text-balance text-3xl font-semibold text-slate-800 md:text-4xl md:leading-tight">
            Our Commitment to Excellence
          </h2>
          <p class="mt-4 text-pretty text-lg/7 text-slate-700">
            At ECOS Consulting, we believe that compliance and productivity can go hand in hand. Our integrated approach ensures that your business meets all regulatory requirements while maintaining operational efficiency.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-teal-200/70">
                <Icon name="check" class="size-6 text-teal-700" />
              </div>
              <span class="text-lg font-medium text-slate-700">Professional Expertise</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-teal-200/70">
                <Icon name="check" class="size-6 text-teal-700" />
              </div>
              <span class="text-lg font-medium text-slate-700">Practical Solutions</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-teal-200/70">
                <Icon name="check" class="size-6 text-teal-700" />
              </div>
              <span class="text-lg font-medium text-slate-700">Integrated Approach</span>
            </div>
          </div>
        </div>
        
        <div class="relative flex items-center justify-center overflow-hidden">
          <div class="relative h-80 w-full overflow-hidden rounded-xl shadow-xl md:h-96">
            <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="absolute -left-20 -top-20 z-0 h-64 w-64 text-teal-300/40">
              <path fill="currentColor" d="M37.5,-50.2C48.3,-39.8,56.7,-28.3,63.1,-14.2C69.5,-0.2,73.9,16.3,68.8,29.1C63.7,42,49.1,51.1,34.4,56.6C19.7,62.2,4.9,64.1,-11.3,62.9C-27.4,61.7,-44.9,57.4,-55.2,46.4C-65.5,35.4,-68.7,17.7,-66.3,1.4C-64,-14.9,-56.1,-29.8,-44.9,-40C-33.8,-50.2,-19.3,-55.8,-4.8,-50.9C9.7,-46.1,26.8,-30.7,37.5,-50.2Z" transform="translate(100 100)" />
            </svg>
            
            <div class="relative z-10 grid h-full w-full grid-cols-2 gap-4 p-8">
              <Image 
                src={datanovaImage} 
                alt="Environmental services visualization" 
                class="h-full w-full rounded-lg object-cover shadow-lg"
              />
              
              <Image 
                src={graphImage} 
                alt="Safety services visualization" 
                class="h-full w-full rounded-lg object-cover shadow-lg"
              /> 
              
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Additional Services Section - Original Styling */}
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20">
    <div class="mb-10 max-w-2xl text-center lg:mb-14 mx-auto">
      <h2 class="text-balance text-3xl font-semibold text-slate-800 md:text-4xl md:leading-tight">
        Additional Services
      </h2>
      <p class="mt-4 text-pretty text-lg text-slate-600">
        Comprehensive solutions for all your environmental and safety compliance needs
      </p>
    </div>
    
    <div class="grid gap-10 lg:grid-cols-2">
      {/* Environmental Services Section */}
      <div class="group relative isolate overflow-hidden rounded-3xl bg-teal-200 p-5 sm:p-11">
        <div class="svgBlock mx-auto max-w-7xl">
          <h3 class="relative text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
            {servicesSection.environmentalServices.title}
          </h3>
          <p class="mt-4 text-pretty text-lg text-slate-700">
            {servicesSection.environmentalServices.description}
          </p>
          <ul class="mt-6 space-y-4">
            {servicesSection.environmentalServices.items.map((item) => (
              <li class="flex items-start">
                <Icon name="check" class="mr-3 mt-1 size-5 flex-shrink-0 text-teal-700" />
                <span class="text-slate-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Safety Services Section */}
      <div class="group relative isolate overflow-hidden rounded-3xl bg-teal-200 p-5 sm:p-11">
        <div class="svgBlock mx-auto max-w-7xl">
          <h3 class="relative text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
            {servicesSection.safetyServices.title}
          </h3>
          <p class="mt-4 text-pretty text-lg text-slate-700">
            {servicesSection.safetyServices.description}
          </p>
          <ul class="mt-6 space-y-4">
            {servicesSection.safetyServices.items.map((item) => (
              <li class="flex items-start">
                <Icon name="check" class="mr-3 mt-1 size-5 flex-shrink-0 text-teal-700" />
                <span class="text-slate-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
  >
    <div class="mx-auto mb-10 max-w-3xl text-center lg:mb-14">
      <h2
        class="text-balance text-4xl text-slate-800 sm:text-5xl"
      >
        <Fragment set:html={'Elevate Your Safety and Compliance Standards. <br /> Partner with <span class="font-medium text-teal-700">ECOS</span><span class="font-light text-slate-400"> Consulting</span>.'} />
      </h2>
      <p class="text-lg\/8 mt-5 text-pretty text-slate-600">
        Contact us today to discover how our integrated approach to safety and environmental compliance can help your organization achieve regulatory excellence while enhancing productivity.
      </p>
      <Button
        href="/contact"
        variant="primary"
        className="mt-7 inline-flex border-none px-3.5!">Get in Touch</Button
      >
    </div>
  </section>

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
    }
  </style>
</BaseLayout>