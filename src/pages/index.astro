---
import BaseLayout from "@layout/BaseLayout.astro";
import Hero from "@sections/HeroSection.astro";
import FeatureBento from "@sections/FeatureBento.astro";
import FeatureAnimated from "@sections/FeatureAnimated.astro";
import FeatureGrid from "@sections/FeatureGrid.astro";
import CTA from "@sections/CTA.astro";

// Import the Image component
import { Image } from "astro:assets";

// Make sure these images exist at these paths
import environmentalImg from "../assets/images/environmental-services.jpg";
import safetyImg from "../assets/images/safety-services.jpg";
import complianceImg from "../assets/images/compliance-audits.jpg";
---

<BaseLayout>
  <Hero />

  {/* Services Section */}
  <section class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      {/* Section header */}
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-slate-700">Services</p>
        <h2 class="mt-2 text-balance text-4xl font-medium text-slate-900 md:text-5xl md:leading-tight mx-auto max-w-4xl">
          Comprehensive Solutions for Your Environmental Needs
        </h2>
        <p class="mx-auto mt-6 max-w-2xl text-pretty text-lg text-slate-600">
          At ECOS Consulting, we offer a range of services designed to ensure safety and compliance in various industries. Our expertise spans environmental assessments, safety management, and compliance audits.
        </p>
      </div>
  
      {/* Services grid */}
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {/* Service 1 */}
        <div class="flex flex-col">
          <div class="overflow-hidden rounded-lg mb-5">
            <img 
              src={environmentalImg.src} 
              alt="Environmental Services" 
              class="w-full h-auto object-cover"
            />
          </div>
          <h3 class="text-2xl font-medium text-slate-900">Environmental Services Tailored for Your Business</h3>
          <p class="mt-3 text-slate-600">Our environmental services help you navigate compliance and sustainability challenges.</p>
        </div>
        
        {/* Service 2 */}
        <div class="flex flex-col">
          <div class="overflow-hidden rounded-lg mb-5">
            <img 
              src={safetyImg.src} 
              alt="Safety Services" 
              class="w-full h-auto object-cover"
            />
          </div>
          <h3 class="text-2xl font-medium text-slate-900">Safety Services to Protect Your Workforce</h3>
          <p class="mt-3 text-slate-600">We provide comprehensive safety solutions to ensure a secure working environment.</p>
        </div>
        
        {/* Service 3 */}
        <div class="flex flex-col">
          <div class="overflow-hidden rounded-lg mb-5">
            <img 
              src={complianceImg.src} 
              alt="Compliance Audits" 
              class="w-full h-auto object-cover"
            />
          </div>
          <h3 class="text-2xl font-medium text-slate-900">Compliance Audits for Peace of Mind</h3>
          <p class="mt-3 text-slate-600">Our compliance audits guarantee adherence to legal standards and regulations.</p>
        </div>
      </div>
    </div>
  </section>

  <FeatureAnimated />

  <FeatureGrid />

  <CTA />
</BaseLayout>