---
import BaseLayout from "@layout/BaseLayout.astro";
import Button from "@ui/Button.astro";
import Icon from "@ui/icons/Icon.astro";
import CTA from "@/components/sections/CTA.astro";
import { Image } from "astro:assets";

// Import your images
import datanovaImage from "@images/datanova.webp";
import graphImage from "@images/graph.webp";
import serviceImage from "@/assets/images/environmental-services.jpg";
// If you have this image:
// import safetyImage from "@images/safety-services.webp";

// Info Section for Additional Services
const servicesSection = {
  environmentalServices: {
    title: "Environmental Services",
    description: "Comprehensive solutions for environmental compliance and management:",
    items: [
      "Due diligence assessments",
      "Pre-feasibility site assessment and risk evaluation",
      "Environmental Impact Assessment (EIA) processes",
      "Identification of environmental management solutions",
      "Compliance advice/auditing in terms of environmental best practice",
      "Project permitting and regulatory guidance",
      "ECO and EO for monitoring and reporting during construction"
    ]
  },
  safetyServices: {
    title: "Safety Services",
    description: "Complete safety management and compliance solutions:",
    items: [
      "Health and Safety Management Plans",
      "Approval of Health and Safety Files",
      "Health and Safety Risk Assessments",
      "Design of EHS management systems based on ISO standards",
      "Infrastructure assessments for compliance",
      "Construction permit applications (DOL)",
      "Health and Safety Agent and management services",
      "Auditing throughout operation as required",
      "Maintenance of management systems in line with ISO requirements",
      "Provision of Safety Officer for construction"
    ]
  }
};
---

<BaseLayout>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8 min-h-[auto]!">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-3xl lg:mx-0">
        <h1 class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          Elevating Your Safety and Compliance Standards
        </h1>
        <p class="mt-8 text-pretty text-lg font-medium text-slate-700 sm:text-xl/8">
          Safety & Compliance Solutions: SHE, Facilities, Tech, Construction
        </p>
        <p class="mt-4 text-pretty text-lg text-slate-600">
          Optimize safety and compliance with our expert services. From SHE management to facilities and tech plant safety, we've got you covered.
        </p>
      </div>
    </div>
  </section>

  {/* Service Cards Section - Modern Design */}
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {/* SHE Management Card */}
      <div class="group relative flex h-[400px] flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white sm:h-[420px] lg:h-[380px] xl:h-[420px]">
        <div class="h-1/3 w-full overflow-hidden">
          <Image 
            src={serviceImage} 
            alt="SHE Management" 
            class="h-full w-full object-cover"
          />
        </div>
        
        <div class="flex h-2/3 flex-col p-4 sm:p-6">
          <h3 class="mb-2 text-lg font-medium text-slate-800 sm:mb-3 sm:text-xl">SHE Management</h3>
          <p class="mb-4 text-sm text-slate-600 sm:text-base">
            We develop, implement and maintain effective health and safety, quality and environmental management systems that adhere to all applicable regulations.
          </p>
          
          <div class="mt-auto">
            <a href="#" class="group/link inline-flex items-center text-sm text-primary-700 transition hover:text-primary-500 sm:text-base">
              <span>Learn more</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      {/* Facilities Management Card */}
      <div class="group relative flex h-[400px] flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white sm:h-[420px] lg:h-[380px] xl:h-[420px]">
        <div class="h-1/3 w-full overflow-hidden">
          <Image 
            src={serviceImage} 
            alt="Facilities Management" 
            class="h-full w-full object-cover"
          />
        </div>
        
        <div class="flex h-2/3 flex-col p-4 sm:p-6">
          <h3 class="mb-2 text-lg font-medium text-slate-800 sm:mb-3 sm:text-xl">Facilities Management</h3>
          <p class="mb-4 text-sm text-slate-600 sm:text-base">
            Optimize your facility's performance with our comprehensive technical and non-technical services for safety, efficiency, and comfort.
          </p>
          
          <div class="mt-auto">
            <a href="#" class="group/link inline-flex items-center text-sm text-primary-700 transition hover:text-primary-500 sm:text-base">
              <span>Learn more</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      {/* Tech Plant Safety Card */}
      <div class="group relative flex h-[400px] flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white sm:h-[420px] lg:h-[380px] xl:h-[420px]">
        <div class="h-1/3 w-full overflow-hidden">
          <Image 
            src={serviceImage} 
            alt="Tech Plant Safety" 
            class="h-full w-full object-cover"
          />
        </div>
        
        <div class="flex h-2/3 flex-col p-4 sm:p-6">
          <h3 class="mb-2 text-lg font-medium text-slate-800 sm:mb-3 sm:text-xl">Tech Plant Safety</h3>
          <p class="mb-4 text-sm text-slate-600 sm:text-base">
            We prioritize the safety and reliability of your technical plants through comprehensive compliance assessments and risk identification.
          </p>
          
          <div class="mt-auto">
            <a href="#" class="group/link inline-flex items-center text-sm text-primary-700 transition hover:text-primary-500 sm:text-base">
              <span>Learn more</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      {/* Construction Safety Card */}
      <div class="group relative flex h-[400px] flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white sm:h-[420px] lg:h-[380px] xl:h-[420px]">
        <div class="h-1/3 w-full overflow-hidden">
          <Image 
            src={serviceImage} 
            alt="Construction Safety" 
            class="h-full w-full object-cover"
          />
        </div>
        
        <div class="flex h-2/3 flex-col p-4 sm:p-6">
          <h3 class="mb-2 text-lg font-medium text-slate-800 sm:mb-3 sm:text-xl">Construction Safety</h3>
          <p class="mb-4 text-sm text-slate-600 sm:text-base">
            We provide holistic Compliance Assessment and Audit Services throughout the life cycle of a construction project.
          </p>
          
          <div class="mt-auto">
            <a href="#" class="group/link inline-flex items-center text-sm text-primary-700 transition hover:text-primary-500 sm:text-base">
              <span>Learn more</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Visual Section before Additional Services */}
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 lg:px-8">
    <div class="relative overflow-hidden rounded-3xl bg-primary-950">
      <div class="absolute inset-0 bg-primary-700 opacity-5 bg-[radial-gradient(#075252_1px,transparent_1px)]" style="background-size: 20px 20px;"></div>
      
      <div class="relative grid gap-8 p-8 md:grid-cols-2 md:p-12">
        <div class="flex flex-col justify-center">
          <h2 class="text-balance text-3xl font-semibold text-white md:text-4xl md:leading-tight">
            Our Commitment to Excellence
          </h2>
          <p class="mt-4 text-pretty text-lg/7 text-slate-50">
            At ECOS Consulting, we believe that compliance and productivity can go hand in hand. Our integrated approach ensures that your business meets all regulatory requirements while maintaining operational efficiency.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-300/70">
                <Icon name="check" class="size-6 text-primary-700" />
              </div>
              <span class="text-lg font-medium text-slate-50">Professional Expertise</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-300/70">
                <Icon name="check" class="size-6 text-primary-700" />
              </div>
              <span class="text-lg font-medium text-slate-50">Practical Solutions</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-300/70">
                <Icon name="check" class="size-6 text-primary-700" />
              </div>
              <span class="text-lg font-medium text-slate-50">Integrated Approach</span>
            </div>
          </div>
        </div>
        
        <div class="relative flex items-center justify-center overflow-hidden">
          <div class="relative h-80 w-full overflow-hidden rounded-xl shadow-xl md:h-96">
            
            
            <div class="relative z-10 grid h-full w-full grid-cols-2 gap-4 p-8">
              <Image 
                src={datanovaImage} 
                alt="Environmental services visualization" 
                class="h-full w-full rounded-lg object-cover shadow-lg"
              />
              
              <Image 
                src={graphImage} 
                alt="Safety services visualization" 
                class="h-full w-full rounded-lg object-cover shadow-lg"
              /> 
              
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Additional Services Section - Original Styling */}
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-20">
    <div class="mb-10 max-w-2xl text-center lg:mb-14 mx-auto">
      <h2 class="text-balance text-3xl font-semibold text-slate-800 md:text-4xl md:leading-tight">
        Additional Services
      </h2>
      <p class="mt-4 text-pretty text-lg text-slate-600">
        Comprehensive solutions for all your environmental and safety compliance needs
      </p>
    </div>
    
    <div class="grid gap-10 lg:grid-cols-2">
      {/* Environmental Services Section */}
      <div class="group relative isolate overflow-hidden rounded-3xl bg-slate-100 p-5 sm:p-11">
        <div class="svgBlock mx-auto max-w-7xl">
          <h3 class="relative text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
            {servicesSection.environmentalServices.title}
          </h3>
          <p class="mt-4 text-pretty text-lg text-slate-700">
            {servicesSection.environmentalServices.description}
          </p>
          <ul class="mt-6 space-y-4">
            {servicesSection.environmentalServices.items.map((item) => (
              <li class="flex items-start">
                <Icon name="check" class="mr-3 mt-1 size-5 flex-shrink-0 text-primary-700" />
                <span class="text-slate-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Safety Services Section */}
      <div class="group relative isolate overflow-hidden rounded-3xl bg-slate-100 p-5 sm:p-11">
        <div class="svgBlock mx-auto max-w-7xl">
          <h3 class="relative text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
            {servicesSection.safetyServices.title}
          </h3>
          <p class="mt-4 text-pretty text-lg text-slate-700">
            {servicesSection.safetyServices.description}
          </p>
          <ul class="mt-6 space-y-4">
            {servicesSection.safetyServices.items.map((item) => (
              <li class="flex items-start">
                <Icon name="check" class="mr-3 mt-1 size-5 flex-shrink-0 text-primary-700" />
                <span class="text-slate-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <CTA/>

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
    }
  </style>
</BaseLayout>